<body>
    <div class="">
        <div class="navbar navbar-inverse navbar-fixed-top CarbonNavBar">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("InterTransitApp", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Client", "Index", "Clients")</li>
                        <li>@Html.ActionLink("Dossiers", "Index", "DossierFclExports")</li>
                        <li>@Html.ActionLink("Transpoteurs", "Index", "Transporteurs")</li>
                        <li>@Html.ActionLink("Compagnie Maritimes", "Index", "CompagnieMaritimes")</li>
                        <li style="margin-top:1em; ">
                            @using (Html.BeginForm("Index", "Clients", FormMethod.Get))
                            {@Html.TextBox("searchString", ViewBag.CurrentFilter as string) <input type="submit" value="Rechercher Client" class="btn btn-default" />}
                        </li>
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - InterTransit - Lorenzo</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/jQueryFixes.js"></script>
</body>
</html>
