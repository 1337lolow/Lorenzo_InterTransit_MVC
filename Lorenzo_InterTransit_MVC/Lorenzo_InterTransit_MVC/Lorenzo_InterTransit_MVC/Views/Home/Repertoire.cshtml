@model Lorenzo_InterTransit_MVC.ViewModels.RepertoireVM
@{
    ViewBag.Title = "Repertoire";
}



<div class="panel panel-info">
    <div class="panel-heading">
        <h2>Répertoire</h2>
        @Html.ActionLink("Répertoire Cie Maritimes", "Repertoire", new { Controller="Home", Action= "Repertoire", idCieMari=1 }) -||-
        @Html.ActionLink("Répertoire Clients", "Repertoire", new { Controller = "Home", Action = "Repertoire", IdClient = 1 }) -||-
        @Html.ActionLink("Répertoire Transporteur", "Repertoire", new { Controller = "Home", Action = "Repertoire", idTrans = 1 })
    </div>
    <table class="table table-striped table-responsive">
        <tr>
            <th>Raison Sociale</th>
            <th>E-Mail</th>
            <th>Téléphone</th>
            <th>Pays</th>
        </tr>
        @if (Model.clientRepertoire != null)
        {
            foreach (var item in Model.clientRepertoire)
            {
                <tr>
                    <td>
                        @item.CLT_NOMRAIS
                    </td>
                    <td>
                        @item.CLT_MAIL
                    </td>
                    <td>
                        @item.CLT_TEL
                    </td>
                    <td>
                        @item.CLT_PAYS
                    </td>
                </tr>
            }
        }
        @if (Model.cieMaritimeRepertoire != null)
        {
            foreach (var item in Model.cieMaritimeRepertoire)
            {
                <tr>
                    <td>
                        @item.CM_NOMRAIS
                    </td>
                    <td>
                        @item.CM_MAIL
                    </td>
                    <td>
                        @item.CM_TEL
                    </td>
                    <td>
                        @item.CM_PAYS
                    </td>
                </tr>
            }
        }
        @if (Model.transRepertoire != null)
        {
            foreach (var item in Model.transRepertoire)
            {
                <tr>
                    <td>
                        @item.TRS_NOMRAIS
                    </td>
                    <td>
                        @item.TRS_MAIL
                    </td>
                    <td>
                        @item.TRS_TEL
                    </td>
                    <td>
                        @item.TRS_PAYS
                    </td>
                </tr>
            }
        }
    </table>
</div>